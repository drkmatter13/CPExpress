        .content
          #form._form
              form(action='/items/#{edit._id}/edit', method='POST')
                fieldset
                  legend WHAT ARE YOU SELLING?
                  input(type='text', name='name', value='#{edit.name}')
                fieldset
                  legend PRICE
                  input(type='text', name='price',  value='#{edit.price}')
                fieldset
                  legend DESCRIPTION
                  textarea(name='description') #{edit.description}
                fieldset
                  legend CATEGORY
                  label.input-select
                    select(name='category')
                      option(selected='selected') - Select a category-
                      option(value='Motors') Motors
                      option(value='Microcontrollers') Microcontrollers
                      option(value='Sensors') Sensors 
                      option(value='Tools and Equipments') Tools and Equipments
                      option(value='Integrated Circuits') Integrated Circuits
                      option(value='Circuit Boards') Circuit Boards
                      option(value='Electronic Components') Electronic Components
                      option(value='Electrical Components') Electrical Components
                      option(value='Kits and Modules Cases') Kits and Modules Cases
                      option(value='Projects') Projects
                      option(value='Others') Others
                fieldset
                  legend STATUS
                  label.input-check
                    input(type='radio', name='status', value='Old and Not Functional')
                    span Old and Not Functional
                  label.input-check
                    input(type='radio', name='status', value='Old but Functional')
                    span Old but Functional 
                  label.input-check
                    input(type='radio', name='status', value='Old but Never Used')
                    span Old but Never Used
                  label.input-check
                    input(type='radio', name='status', value='Newly bought but Used')
                    span Newly bought but Used
                  label.input-check
                    input(type='radio', name='status', value='Newly bought but Never Used')
                    span Newly bought but Never Used
                fieldset
                 legend UPLOAD IMAGE
                  
                 a(href='https://postimage.io/' target='_blank')
                    span Click here to upload image and get image url!
                fieldset
                  legend IMAGE URL
                  input(type='text', name='imageUrl1', placeholder='#{edit.imageUrl1}')
                  input(type='text', name='imageUrl2', placeholder='#{edit.imageUrl2}')
                  input(type='text', name='imageUrl3', placeholder='#{edit.imageUrl3}')
                
                
                h2.w3-text-red #{error}

                input(type='submit', name='submit', value='UPDATE ITEM')


