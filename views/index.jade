extends layout

block content
    .js
        #preloader
        img.w3-display.left(src='/images/newicon.png' style='height:60px;width:150px;margin-left:50px;position:absolute;margin-top:0px;')
        nav
        
          ul 
            
            li
              a(href='/') 

                strong Home	
            li
              a(href='/items') 
                strong Purchase
            li
              a(href='/items/add') 
                strong Sell
            
        .button
           a.btn-open(href='#')
        
          
        .overlay
          .wrap
            ul.wrap-nav
              li
                a(href='/items/add') Sell an Item
                ul
                  li
                    a(href='/') Home

              li
                a(href='#') Buy an Item
                ul
                  li
                    a(href='/items/motors') Motors
                  li
                    a(href='/items/microcontrollers') Microcontrollers
                  li
                    a(href='/items/sensors') Sensors
                  li
                    a(href='/items/tools') Tools and Equipments
                  li
                    a(href='/items/ic') Integrated Circuits
                  li
                    a(href='/items/cboards') Circuit Boards
                  li
                    a(href='/items/electronic') Electronic Components
                  li
                    a(href='/items/electrical') Electrical Components
                  li
                    a(href='/items/kits') Kits and Module Cases
                  li
                    a(href='/items/projects') Projects
                  li
                    a(href='/items/others') Others
                  li
                    a(href='/items') -View All-
            
              li
                if (user)
                  a(href='/profile')  #{user.username}
                else
                  a(href='/auth/login') Join Us Now!
                ul
                  if (user)
                      li
                        
                        a(href='/profile')
                          .profile-card_header-imgbox
                             img(src='#{user.photo}' style='height:100px;width:140px;')
                      li
                        a(href='/profile') View Profile
                      li
                        a(href='/auth/logout') Logout
                  else
                      li
                        a(href='/auth/login') Login
                      li
                        a(href='/auth/register') Sign Up
                  
            .social
              a(href='#')
                .social-icon
                  i.fa.fa-facebook
              a(href='#')
                .social-icon
                  i.fa.fa-twitter
              a(href='#')
                .social-icon
                  i.fa.fa-codepen
              a(href='#')
                .social-icon
                  i.fa.fa-behance
              a(href='#')
                .social-icon
                  i.fa.fa-dribbble
              p
                | © 2017 
                br
                |  Site: 
                a(href='#') Github Code
        .content
            header#myHeader.w3-container.w3-padding
              .w3-center
                if (user)
                    h4 Welcome, #{user.username}!
                    h1.w3-xxxlarge.w3-animate-bottom Post your items and they will come.
                    .w3-padding-32
                      button.w3-btn.w3-xlarge.w3-orange.w3-hover-red(onclick="document.getElementById('id01').style.display='block'", style='font-weight:900; border-radius: 15px;') Sell an Item
                    .w3-center
                      h2 CPExpress is an online web application <br>that allows you to post your items so customers<br> may see and begin a transaction with you.
                else 
                    h4 Welcome to CPExpress
                    h1.w3-xxxlarge.w3-animate-bottom Post your items and they will come.
                    .w3-padding-32
                      a(href='/auth/login')
                        button.w3-btn.w3-xlarge.w3-orange.w3-hover-red(style='font-weight:900;margin: 10px; border-radius: 15px;') Login
                      a(href='/auth/register')
                        button.w3-btn.w3-xlarge.w3-orange.w3-hover-red(style='font-weight:900;margin: 10px; border-radius: 15px;') Register

                    .w3-center
                      h2 CPExpress is an online web application <br>that allows you to post your items so customers<br> may see and begin a transaction with you.

            #id01.w3-modal
                  .w3-modal-content.w3-card-8.w3-animate-top
                    header.w3-container.w3-theme-l1
                      span.w3-closebtn(onclick="document.getElementById('id01').style.display='none'") ×
                      h4 Attention! Please make sure your profile information is legit.
                      h5
                        | So buyers can properly contact you. 
                    .w3-padding
                      p Make sure your contact no. and email address are correct.
                      p
                        | Go to your 
                        a.w3-btn(href='/profile') PROFILE
                        |  to check or proceed to 
                        a.w3-btn(href='/items/add') SELL AN ITEM
                    footer.w3-container.w3-theme-l1
                      p Thank you for your cooperation!

         

